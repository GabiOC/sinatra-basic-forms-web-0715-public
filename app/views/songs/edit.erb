<form action="/songs/<%= @song.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <div>
    <label for="name">Name</label>
    <input id="name" type="text" name="song[title]" value="<%= @song.title %>">
    <label for="artist">Artist</label>
    <input id="artist" type="text" name="song[artist]" value="<%= @song.artist %>">
    <label for="genre">Album</label>
    <input id="album" type="text" name="song[album]" value="<%= @song.album %>">
    <label for="genre">Genre</label>
    <input id="genre" type="text" name="song[genre]" value="<%= @song.genre %>">
    <label for="length">Length</label>
    <input id="length" type="text" name="song[length]" value="<%= @song.length %>">
  </div>
  <input type="submit" value="Save Changes">
</form>
